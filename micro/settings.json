{
    "colorscheme": "custom",
    "diffgutter": true,
    "eofnewline": false,
    "fastdirty": true,
    "filemanager-compressparent": true,
    "filemanager-foldersfirst": true,
    "filemanager-openonstart": false,
    "filemanager-showdotfiles": true,
    "filemanager-showignored": true,
    "ft:unknown": {
        "ruler": false,
        "softwrap": true
    },
    "hidehelp": false,
    "matchbrace": false,
    "matchbraceleft": false,
    "mkparents": true,
    "pluginchannels": [
        "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    ],
    "pluginrepos": [],
    "statusformatl": "$(filename) $(modified)($(line),$(col)) | ft:$(opt:filetype) | $(opt:fileformat) | $(opt:encoding)",
    "termtitle": false,
    "trimdiff": false
}
